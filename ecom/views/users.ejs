<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include('navbar') %>
    
<table>
    <tr>
        <th>Name</th>
        <th>email</th>
        <th>role</th>
        <th>cart</th>
        <th>BLOCK</th>
    </tr>
   <%  users.forEach(user => { %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td><%= user.selectedProduct.join(',') %></td>
            <td><a href="/blockUnblock/<%= user._id %>"><%= user.block ? "unblock" : "block" %></a> </td>
        </tr>
    
<% }); %>
</table>
</body>
</html>